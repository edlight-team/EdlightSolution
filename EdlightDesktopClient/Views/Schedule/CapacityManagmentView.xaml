<UserControl x:Class="EdlightDesktopClient.Views.Schedule.CapacityManagmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:Styles.Behaviors;assembly=Styles"
             xmlns:controls="clr-namespace:Styles.Controls;assembly=Styles"
             xmlns:converters="clr-namespace:Styles.Converters;assembly=Styles"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:vm="clr-namespace:EdlightDesktopClient.ViewModels.Schedule"
             behaviors:LoadedBehavior.Command="{Binding LoadedCommand}"
             d:DataContext="{d:DesignInstance vm:CapacityManagmentViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </UserControl.Resources>
    <Grid>
        <!--#region blur-->

        <Border Background="Black"
                Opacity="0.35"
                Style="{DynamicResource RoundedBackgroundBorder}" />

        <!--#endregion-->
        <!--#region modal border-->

        <Border Width="800"
                Height="800"
                Style="{DynamicResource RoundedBackgroundBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="15" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15" />
                    <RowDefinition Height="35" />
                    <RowDefinition />
                    <RowDefinition Height="15" />
                </Grid.RowDefinitions>

                <!--#region Лоадер-->

                <controls:LoaderBox Grid.Row="0"
                                    Grid.RowSpan="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Panel.ZIndex="{Binding Loader.PanelIndex, UpdateSourceTrigger=PropertyChanged}"
                                    IsActive="{Binding Loader.IsActive, UpdateSourceTrigger=PropertyChanged}"
                                    Message="{Binding Loader.Message, UpdateSourceTrigger=PropertyChanged}" />

                <!--#endregion-->
                <!--#region header-->

                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Style="{DynamicResource SimpleTextBlock}"
                           Text="Управление нагрузкой" />

                <!--#endregion-->
                <!--#region close-->

                <Button Grid.Row="1"
                        Grid.Column="1"
                        Width="20"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding CloseModalCommand}"
                        Foreground="{DynamicResource PrimaryFontBrush}"
                        Style="{DynamicResource SimpleButton}">
                    <ContentControl Template="{DynamicResource Close}" />
                </Button>

                <!--#endregion-->

                <ScrollViewer Grid.Row="2" Grid.Column="1">
                    <Expander Height="400"
                              Margin="10"
                              VerticalAlignment="Top"
                              Header="Импорт преподавателей"
                              IsExpanded="True">
                        <ScrollViewer VerticalScrollBarVisibility="Visible">
                            <StackPanel Orientation="Vertical">
                                <ItemsControl VerticalAlignment="Top" ItemsSource="{Binding Teacher_FIO, UpdateSourceTrigger=PropertyChanged}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <hc:Card Height="35"
                                                     Margin="10,3,10,3"
                                                     Background="{DynamicResource InnerElementBackgroundBrush}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="200" />
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="50" />
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="100" />
                                                        <ColumnDefinition Width="50" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Margin="5"
                                                               HorizontalAlignment="Left"
                                                               Style="{DynamicResource ElementTextBlock}"
                                                               Text="{Binding TeacherInitials}" />
                                                    <TextBlock Grid.Column="1"
                                                               HorizontalAlignment="Left"
                                                               Style="{DynamicResource ElementTextBlock}"
                                                               Text="В базе данных : " />
                                                    <CheckBox Grid.Column="2"
                                                              IsChecked="{Binding IsLookUpOnDB}"
                                                              IsEnabled="False"
                                                              Opacity="1" />
                                                    <Button Grid.Column="3"
                                                            Width="150"
                                                            Height="30"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Command="{Binding ConfirmCommand, UpdateSourceTrigger=PropertyChanged}"
                                                            CommandParameter="{Binding}"
                                                            Style="{DynamicResource SimpleButtonWithBorder}">
                                                        <TextBlock Style="{DynamicResource ElementTextBlock}" Text="Подтверждение" />
                                                    </Button>
                                                    <TextBlock Grid.Column="4"
                                                               HorizontalAlignment="Left"
                                                               Style="{DynamicResource ElementTextBlock}"
                                                               Text="Подтвержден : " />
                                                    <CheckBox Grid.Column="5"
                                                              IsChecked="{Binding IsConfirmedOrSkipped}"
                                                              IsEnabled="False"
                                                              Opacity="1" />
                                                </Grid>
                                            </hc:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Width="250"
                                        Height="35"
                                        Margin="5"
                                        Style="{DynamicResource SimpleButtonWithBorder}">
                                    <TextBlock Style="{DynamicResource ElementTextBlock}" Text="Выполнить импорт" />
                                </Button>
                            </StackPanel>
                        </ScrollViewer>
                    </Expander>
                </ScrollViewer>
            </Grid>
        </Border>
        <!--#endregion-->
    </Grid>
</UserControl>
