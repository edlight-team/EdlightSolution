    <ContentPage Title="Profile" IconImageSource="profile.png">
        <Label Text="ProfilePage" />
    </ContentPage>
    <ContentPage Title="Settings" IconImageSource="settings.png">
        <Label Text="SettingsPage" />
    </ContentPage>
</TabbedPage>